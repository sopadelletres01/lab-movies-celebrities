{{#with movie}}
    <h1>{{title}}</h1>
    <h5><strong>Genre:</strong>{{genre}}</h5>
    <h5><strong>Plot: </strong>{{plot}}</h5>
    <h5><strong>Cast: </strong></h5>
{{/with}}
<ul>
{{#each movie.cast}} 
        <li>
            <h5>Name: <strong>{{this.name}}</strong></h5>
            <h5>Occupation: <strong>{{this.occupation}}</strong></h5>
            <h5>Catch phrase: <strong>{{this.catchPhrase}}</strong></h5>
        </li>
{{/each}}
</ul>
<a href="/movies/{{movie.id}}/edit">Edit</a>